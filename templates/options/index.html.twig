{% extends 'base.html.twig' %}

{% block title %}Options{% endblock %}

{% block body %}
{% include "home/_navbar.html.twig" %}
{% include "dashboard/_menu.html.twig" %}
{% include "options/_updatePointsModal.html.twig" %}

<div class="d-flex flex-row align-items-center">
    <h1 class="mx-4 mt-2 text-light">Répartition des points</h1>
    <span><a class="btn btn-warning btn-sm mx-4 mt-2" data-bs-toggle="modal" data-bs-target="#updatePoints" title="Modifier" role="button">Modifier la répartition des points</a></span>
</div>
<div class="d-flex flex-column p-4 col-11 col-md-6" >
    <h5 class="text-light">Points gagnés contre un adversaire au-dessus dans le classement :</h5>
    <table class="table table-bordered mt-2 mx-2">
        <thead>
            <tr>
            <th>nombre de places d'écart</th>
            <th class="tdNumber">5</th>
            <th class="tdNumber">4</th>
            <th class="tdNumber">3</th>
            <th class="tdNumber">2</th>
            <th class="tdNumber">1</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Points gagnés</td>
                {% for point in abovePoints %}
                    <td class="tdNumber">{{point}}</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>
    <h5 class="text-light">Points gagnés contre un adversaire en-dessous dans le classement :</h5>
    <table class="table table-bordered mt-2 mx-2 col-10 col-md-6">
        <thead>
            <tr>
            <th>nombre de places d'écart</th>
            <th class="tdNumber">5</th>
            <th class="tdNumber">4</th>
            <th class="tdNumber">3</th>
            <th class="tdNumber">2</th>
            <th class="tdNumber">1</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Points gagnés</td>
                {% for point in underPoints %}
                    <td class="tdNumber">{{point}}</td>
                {% endfor %}
            </tr>
        </tbody>
    </table>
    <table class="table table-bordered mt-4 mx-2">
        <thead>
            <tr>
                <th>Point(s) pour un match perdu</th>
                <th class="tdNumber">{{matchLostPoints}}</th>
            </tr>

</div>
{% endblock %}
