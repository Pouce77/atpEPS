{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="text-light text-center mt-4">Réinitialiser le mot de passe</h1>
<div class="col-10 col-sm-8 col-md-6 m-auto bg-light mt-4 p-4 rounded">
    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrez votre adresse mail, nous vous enverrons un mail 
                avec un lien de réinitialisation de mot de passe.
            </small>
        </div>

        <button class="btn btn-primary">Envoyer un mail de réinitialisation du mot de passe</button>
    {{ form_end(requestForm) }}
</div>
{% endblock %}
