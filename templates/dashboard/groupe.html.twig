{% extends 'base.html.twig' %}

{% block title %}Mes groupes{% endblock %}

{% block body %}
  
{% include "home/_navbar.html.twig" %}
{% include "dashboard/_menu.html.twig" %}
{% include "_flash.html.twig" %}
{% include "dashboard/_addGroupModal.html.twig" %}

<div class="container">
  <button role="button" class="btn btn-primary m-4" data-bs-toggle="modal" data-bs-target="#addGroupeModal" title="Modifier">Ajouter un groupe</button>
  <div class="row">
    <div class="col-12 d-flex gap-5 m-4 flex-wrap justify-content-start">
        {% for groupe in groups %}
        <div class="card" style="width:18rem;">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title"><a class="groupelink" href="{{path('app_groupe_view',{'id':groupe.name})}}">{{groupe.name}}</a></h5>
                <button class="btn btn-danger btn-sm align-self-end" role="button" data-bs-toggle="modal" data-bs-target="#deleteGroupeModal{{groupe.id}}" title="Supprimer"><i class="bi bi-trash3"></i></button>
                {% include "dashboard/_deleteGroupeModal.html.twig" %}
            </div>
        </div>
        {% endfor %}
    </div>
  </div>
</div>
{% endblock %}
