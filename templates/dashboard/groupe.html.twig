{% extends 'base.html.twig' %}

{% block title %}Mes groupes{% endblock %}

{% block body %}
{% include "home/_navbar.html.twig" %}
{% include "dashboard/_menu.html.twig" %}
{% include "_flash.html.twig" %}

<div class="container">
  <button class="btn btn-primary m-4">Ajouter un groupe</button>
  <div class="row">
    <div class="col-12 d-flex gap-2 m-4 flex-wrap justify-content-center">
        {% for groupe in groupes %}
        <div class="card" style="width:18rem;">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title"><a class="groupelink" href="">{{groupe}}</a></h5>
                <a class="btn btn-danger btn-sm align-self-end" href="#" role="button"><i class="bi bi-trash3"></i></a>
            </div>
        </div>
        {% endfor %}
    </div>
  </div>
</div>


{% endblock %}